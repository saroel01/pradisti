# PRADISTI Environment Configuration Example
# Copy this file to .env for local development

# Application
PUBLIC_APP_NAME="PRADISTI"
PUBLIC_APP_VERSION="0.1.0"

# Development
NODE_ENV="development"
PUBLIC_DEV_MODE=true

# Database Configuration
DATABASE_URL="sqlite:./db/pradisti.db"
DATABASE_DEV_URL="sqlite:./db/pradisti-dev.db"

# Authentication with Lucia v3
AUTH_SECRET="your-super-secret-auth-key-change-this-in-production"
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
SESSION_COOKIE_NAME="pradisti_session"
SESSION_MAX_AGE=604800000

# Security
BCRYPT_ROUNDS=12
TOKEN_EXPIRY_HOURS=24

# Email Configuration (for verification)
EMAIL_FROM="noreply@pradisti.app"
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_SECURE=false

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# API Configuration
PUBLIC_API_BASE_URL="http://localhost:5173"

# Feature Flags
PUBLIC_ENABLE_REGISTRATION=true
PUBLIC_ENABLE_DEBUG=true